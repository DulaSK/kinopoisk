<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
    <title>Profile</title>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <div class="container">
      <div class="main">
        <div class="categories">
          <h3>Жанры</h3>
          <% genres.forEach((genre) =>{ %>
          <a href=""><%= genre.name %></a>
          <% }) %>
        </div>
        <div class="main-content">
          <h3>Профиль</h3>
          <div class="profile">
            <div class="profile-img">
              <img src="/img/profile-img/img1.jpg" alt="" />
            </div>
            <div class="profile-info">
              <p><span> Полное имя:</span> <%=user.full_name %></p>
              <p><span>E-mail</span> <%= user.email %></p>
              <a href="">
                <button class="edit-btn">Редактировать профиль</button>
              </a>
              <a href="/api/signout">
                <button class="logout-btn">Выход</button>
              </a>
            </div>
          </div>
          <h3>Фильмы</h3>
          <a href="/new">
            <button class="add-btn">Добавить фильм</button>
          </a>
          <% films.forEach(item =>{ %>
          <div class="main-card">
            <div class="card-left">
              <div class="film-img">
                <img src="<%= item.image %>" alt="" />
              </div>
              <div class="film-info">
                <a href=""><%= item.titleRus %></a>
                <a href=""
                  ><%= item.titleEng %>, <%= item.year %>,<%= item.time%>.</a
                >
                <a href=""><%= item.country.name%>,<%= item.genre.name%></a>
                <a href="">Автор: <%= item.author.full_name%></a>
                <button class="film-btn">
                  <img src="/img/icons/play.svg" alt="" />
                  Смотреть
                </button>
              </div>
            </div>
            <div class="card-right">
              <div class="film-rate">
                <p>7.3</p>
                <div class="film-btns">
                  <a href="/edit/<%= item._id %>">
                    <button class="yellow-btn">Редактировать</button>
                  </a>
                  <a
                    onclick="deleteFilms('<%= item._id %>' , '<%=item.author._id %>' )"
                  >
                    <button class="red-btn">Удалить</button>
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <%- include('partials/scripts.ejs') %>
  </body>
</html>
